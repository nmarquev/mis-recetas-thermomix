# TasteBox - Variables de Entorno PRODUCCIÓN
# Copia este archivo como .env en el servidor de producción

# === ENTORNO ===
NODE_ENV=production
PORT=5000

# === SSL (Desactivado - Nginx maneja SSL) ===
SSL_ENABLED=false

# === BASE DE DATOS ===
# Ruta relativa desde backend/ donde se ejecuta Prisma
DATABASE_URL="file:./db/tastebox.db"

# === OPENAI API ===
OPENAI_API_KEY=tu_api_key_aqui

# === UPLOADS ===
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=52428800

# === JWT (Generar con: openssl rand -base64 32) ===
JWT_SECRET=tu_jwt_secret_seguro_aqui
JWT_EXPIRES_IN=7d

# === COOKIDOO (Opcional) ===
COOKIDOO_USERNAME=
COOKIDOO_PASSWORD=
COOKIDOO_COUNTRY=ar

# === CORS (El dominio de producción) ===
FRONTEND_URL=https://tastebox.beweb.com.ar
